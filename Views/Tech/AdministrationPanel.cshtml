    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function displayImage(input) {
            var file = input.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    var imageContainer = document.getElementById('imageContainer');
                    var img = document.createElement('img');
                    img.src = e.target.result;
                    img.id = 'uploadedImage';
                    imageContainer.innerHTML = '';
                    imageContainer.appendChild(img);
                    var uploadButton = document.querySelector('.upload-image-button');
                    uploadButton.style.display = 'none';
                }
                reader.readAsDataURL(file);
            }
        }

        document.addEventListener("DOMContentLoaded", function () {
            var textBoxes = document.querySelectorAll(".entity-text-box");
            textBoxes.forEach(function (textBox) {
                textBox.addEventListener("click", function (event) {
                    event.stopPropagation();
                });
            });

            var entityButtons = document.querySelectorAll(".entity-button");
            entityButtons.forEach(function (button) {
                button.addEventListener("click", function () {
                    var textBox = this.querySelector(".entity-text-box");
                    var entityLabel = this.querySelector(".entity-data");

                    entityLabel.style.display = "none";
                    textBox.style.display = "inline-block";
                    textBox.focus();
                });
            });
        });
    </script>
</head>
<body>
    <main class="main-container">
        <section class="product-box-container">
            <div class="product-box">
                <h2 class="product-heading">Create product:</h2>
                <form method="post" class="product-information" asp-controller="Product" asp-action="CreatedProduct">
                    <div class="product-image-container">
                        @* <div class="upload-image-button" action="/action_page.php">
                        <input type="file" id="myFile" name="imageURL" onchange="displayImage(this)" required>
                        </div>
                        <div id="imageContainer">
                        </div> *@
                        <div class="product-image-sub-container">
                            <label class="product-image-label">Photo:</label>
                            <input class="product-image-input-box" name="imageURL" required></input>
                        </div>
                    </div>
                    <div class="product-text-data">
                        <select class="select-category" name="categoryName" onchange="javascript:changemm(document.search.topmenu,document.search.f5,document.search.f6,'2','1','Избери',27)" required>
                            <option selected="" value="">Choose category</option>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.CategoryName">@category.CategoryName</option>
                            }
                        </select>
                        <label class="description-label">Description:</label>
                        <textarea class="description-box" name="description" required maxlength="200"></textarea>
                        <div class="brand-mode-price-container">
                            <label class="brand-mode-price-label">Brand:</label>
                            <input class="brand-model-price-input-box" name="brand" maxlength="28" required></input>
                        </div>
                        <div class="brand-mode-price-container">
                            <label class="brand-mode-price-label">Model:</label>
                            <input class="brand-model-price-input-box" name="model" maxlength="28" required></input>
                        </div>
                        <div class="brand-mode-price-container">
                            <label class="brand-mode-price-label">Price:</label>
                            <input class="brand-model-price-input-box" name="price" maxlength="28" type="number" step=".01" required></input>
                        </div>
                        <div class="create-product-button-container">
                            <button class="create-product-button" type="submit">
                                <p class="create-product-button-text">Create Product</p>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
