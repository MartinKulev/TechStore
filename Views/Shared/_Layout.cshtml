@RenderBody()

@await RenderSectionAsync("Scripts", required: false)

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/reset-css@5.0.2/reset.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
        }

        button {
            background: none;
            border: none;
            cursor: pointer;
            height: 100%;
        }

        .purple-bar {
            background-color: purple;
            width: 100%;
            height: 70px;
            color: white;
            display: flex;
            justify-content: flex-start;
        }

        .mainHeader-Button {
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 40px;
            padding: 10px;
            color: white;
            text-decoration: none;
        }

            .mainHeader-Button:hover {
                color: gray;
            }

        .container-buttons {
            width: 100%;
            display: flex;
            justify-content: flex-end;
        }

        .option-button {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            border-left: 1px solid black;
            font-size: 20px;
            color: white;
            width: 120px;
            text-decoration: none;
            padding-top: 10px;
        }

        .border-bottom {
            background-color: white;
            height: 2px;
            width: 0%;
            transition: width 1s;
            margin-bottom: 10px;
        }

        .option-button:hover .border-bottom {
            background-color: white;
            width: 100%;
        }

        .icon-button {
            display: flex;
            align-items: center;
            justify-content: center;
            border-left: 1px solid black;
            padding: 10px;
            font-size: 20px;
            color: white;
            width: 60px;
        }

            .icon-button:hover {
                color: gray;
            }

        .content {
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="purple-bar">
        <a class="mainHeader-Button" asp-action="Homepage" asp-controller="Tech">TechStore</a>
        <section class="container-buttons">
            <a class="option-button" asp-action="Laptops" asp-controller="Tech">Лаптопи<div class="border-bottom"></div></a>
            <a class="option-button" asp-action="Smartphones" asp-controller="Tech">Телефони<div class="border-bottom"></div></a>
            <a class="option-button" asp-action="Tablets" asp-controller="Tech">Таблети<div class="border-bottom"></div></a>
            <a class="option-button" asp-action="TVs" asp-controller="Tech">Телевизори<div class="border-bottom"></div></a>
            <a class="option-button" asp-action="Monitors" asp-controller="Tech">Монитори<div class="border-bottom"></div></a>
            <a class="option-button" asp-action="Keyboards" asp-controller="Tech">Клавиатури<div class="border-bottom"></div></a>
            <a class="option-button" asp-action="Mice" asp-controller="Tech">Мишки<div class="border-bottom"></div></a>
            <a class="option-button" asp-action="Headphones" asp-controller="Tech">Слушалки<div class="border-bottom"></div></a>
            <a class="option-button" asp-action="Speakers" asp-controller="Tech">Тонколони<div class="border-bottom"></div></a>
            <a class="icon-button" asp-action="ShoppingCart" asp-controller="Tech"><i class="fa-solid fa-cart-shopping"></i></a>
            <a class="icon-button" asp-action="Profile" asp-controller="Tech"><i class="fa-solid fa-user"></i></a>
        </section>
    </div>
    <div class="content">
    </div>
</body>
</html>
