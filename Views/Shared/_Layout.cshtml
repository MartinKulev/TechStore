@await RenderSectionAsync("Scripts", required: false)
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <style>
        /* button {
                                    border: 0;
                                    padding: 0;
                                } */

        button, input[type="button"], input[type="submit"] {
            /* Resetting padding and margin */
            padding: 0;
            margin: 0;
            /* Resetting border */
            border: none;
            /* Resetting background and color */
            background-color: transparent;
            color: inherit;
            /* Resetting cursor */
            cursor: pointer;
            /* Resetting outline */
            outline: none;
            /* Resetting text decoration */
            text-decoration: none;
            /* Resetting font */
            font: inherit;
        }

        a {
            text-decoration: none;
        }

        input {
            border: none;
        }

        body {
            display: flex;
            flex-direction: column;
            height: 100vh;
            font-family: 'Arial', sans-serif;
            overflow: hidden;
        }

        .purple-bar {
            background-color: purple;
            width: 100%;
            height: 70px;
            color: white;
            display: flex;
            justify-content: flex-start;
        }

        .mainHeader-Button {
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 40px;
            padding: 10px;
            color: white;
            text-decoration: none;
        }

            .mainHeader-Button:hover {
                color: gray;
            }

        .container-buttons {
            width: 100%;
            display: flex;
            justify-content: flex-end;
        }

        .option-button {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            border-left: 1px solid black;
            font-size: 20px;
            color: white;
            width: 150px;
            text-decoration: none;
            height: 100%;
        }

        .border-bottom {
            background-color: white;
            height: 2px;
            width: 0%;
            transition: width 1s;
        }

        .option-button:hover .border-bottom {
            background-color: white;
            width: 100%;
        }

        .icon-button {
            display: flex;
            align-items: center;
            justify-content: center;
            border-left: 1px solid black;
            padding: 10px;
            font-size: 25px;
            color: white;
            width: 75px;
        }

            .icon-button:hover {
                color: gray;
            }

        .text-bubble {
            background-color: white;
            border: 2px solid green;
            border-radius: 10px;
            width: 300px;
            height: 50px;
            padding: 20px;
            position: absolute;
            top: 80px;
            right: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            font-weight: bold;
            transition: opacity 0.5s ease;
        }
    </style>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var textBubble = document.querySelector('.text-bubble');
            setTimeout(function () {
                textBubble.style.opacity = '0';
            }, 5000);
        });
    </script>
</head>
<body>
    @if(TempData["Message"] != null)
    {
        <section class="text-bubble">@TempData["Message"]</section>
    }   
    <div class="purple-bar">
        <a class="mainHeader-Button" asp-action="Homepage" asp-controller="Tech">TechStore</a>
        <section class="container-buttons">
            @foreach (var category in ViewBag.CategoryList)
            {
                <form method="get" asp-action="Category" asp-route-categoryName="@category.CategoryName" asp-controller="Tech">
                    <button type="submit" class="option-button">@category.CategoryName<div class="border-bottom"></div></button>
                </form>
            }
            @if (User.IsInRole("Admin"))
            {
                <a class="icon-button" asp-action="AdministrationPanel" asp-controller="Tech"><i class="fa-solid fa-gear"></i></a>
                <a class="icon-button" asp-action="Profile" asp-controller="Tech"><i class="fa-solid fa-user"></i></a>
            }
            else
            {
                <a class="icon-button" asp-action="Cart" asp-controller="Tech"><i class="fa-solid fa-cart-shopping"></i></a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="icon-button" asp-action="Profile" asp-controller="Tech"><i class="fa-solid fa-user"></i></a>
                }
                else
                {
                    <a class="icon-button" asp-action="Login" asp-controller="Account"><i class="fa-solid fa-user"></i></a>
                }
            }
        </section>
    </div>
    @RenderBody()
</body>
</html>